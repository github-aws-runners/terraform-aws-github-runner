{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "ec2:DescribeInstances",
        "ec2:DescribeTags",
        "ec2:CreateTags",
        "ec2:RunInstances"
      ],
      "Resource": ["*"]
    },
    {
      "Effect": "Allow",
      "Action": "iam:PassRole",
      "Resource": "${arn_runner_instance_role}"
    },
    {
      "Effect": "Allow",
      "Action": ["ssm:PutParameter"],
      "Resource": "*"
    }
  ]
}
