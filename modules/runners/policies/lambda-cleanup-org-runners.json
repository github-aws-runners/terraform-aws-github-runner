{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "ssm:GetParameter"
            ],
            "Resource": [
                "${github_app_key_base64_arn}",
                "${github_app_id_arn}"
            ]
%{ if kms_key_arn != "" ~}
        },
        {
            "Effect": "Allow",
            "Action": [
                "kms:Decrypt"
            ],
            "Resource": "${kms_key_arn}"
%{ endif ~}
%{ if ami_kms_key_arn != "" ~}
        },
        {
            "Effect": "Allow",
            "Action": [
                "kms:DescribeKey",
                "kms:ReEncrypt*",
                "kms:Decrypt"
            ],
            "Resource": "${ami_kms_key_arn}"
        },
        {
            "Effect": "Allow",
            "Action": [
                "kms:CreateGrant"
            ],
            "Resource": "${ami_kms_key_arn}",
            "Condition": {
                "Bool": {
                    "aws:ViaAWSService": "true"
                }
            }
%{ endif ~}
        }
    ]
}
