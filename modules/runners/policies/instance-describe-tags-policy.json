{
  "Version": "2012-10-17",
  "Statement": [
      {          
          "Effect": "Allow",
          "Action": "ec2:DescribeTags",
          "Resource": "*",
          "Condition": {
            "ArnEquals": {
                "aws:SourceArn": "${ec2:SourceInstanceARN}"
            }
        }
      }
  ]
}