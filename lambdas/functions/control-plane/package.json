{
  "name": "@aws-github-runner/control-plane",
  "version": "1.0.0",
  "main": "lambda.ts",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "start": "ts-node-dev src/local.ts",
    "test": "NODE_ENV=test nx test",
    "test:watch": "NODE_ENV=test nx test --watch",
    "lint": "eslint src",
    "watch": "ts-node-dev --respawn --exit-child --files src/local-down.ts",
    "build": "ncc build src/lambda.ts -o dist",
    "dist": "yarn build && cp package.json dist/ && cd dist && zip ../runners.zip *",
    "format": "prettier --write \"**/*.ts\"",
    "format-check": "prettier --check \"**/*.ts\"",
    "all": "yarn build && yarn format && yarn lint && yarn test"
  },
  "devDependencies": {
    "@aws-sdk/types": "^3.775.0",
    "@octokit/types": "^13.10.0",
    "@types/aws-lambda": "^8.10.147",
    "@types/node": "^22.13.14",
    "@vercel/ncc": "^0.38.3",
    "aws-sdk-client-mock": "^4.1.0",
    "aws-sdk-client-mock-jest": "^4.1.0",
    "moment-timezone": "^0.5.47",
    "nock": "^14.0.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0"
  },
  "dependencies": {
    "@aws-github-runner/aws-powertools-util": "*",
    "@aws-github-runner/aws-ssm-util": "*",
    "@aws-lambda-powertools/parameters": "^2.17.0",
    "@aws-sdk/client-ec2": "^3.777.0",
    "@aws-sdk/client-sqs": "^3.777.0",
    "@middy/core": "^4.7.0",
    "@octokit/auth-app": "7.1.5",
    "@octokit/core": "6.1.4",
    "@octokit/plugin-throttling": "9.6.0",
    "@octokit/rest": "21.1.1",
    "cron-parser": "^5.0.4"
  },
  "nx": {
    "includedScripts": [
      "build",
      "dist",
      "format",
      "format-check",
      "lint",
      "start",
      "watch",
      "all"
    ]
  }
}
