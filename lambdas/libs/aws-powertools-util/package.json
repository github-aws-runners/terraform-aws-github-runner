{
  "name": "@aws-github-runner/aws-powertools-util",
  "version": "1.0.0",
  "main": "src/index.ts",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "start": "ts-node-dev src/local.ts",
    "test": "NODE_ENV=test nx test",
    "test:watch": "NODE_ENV=test nx test --watch",
    "lint": "eslint src",
    "watch": "ts-node-dev --respawn --exit-child src/local.ts",
    "format": "prettier --write \"**/*.ts\"",
    "format-check": "prettier --check \"**/*.ts\"",
    "all": "yarn build && yarn format && yarn lint && yarn test"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.146",
    "@types/node": "^22.13.9",
    "body-parser": "^1.20.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@aws-lambda-powertools/logger": "^2.15.0",
    "@aws-lambda-powertools/metrics": "^2.15.0",
    "@aws-lambda-powertools/tracer": "^2.15.0",
    "aws-lambda": "^1.0.7"
  },
  "nx": {
    "includedScripts": [
      "format",
      "format-check",
      "lint",
      "start",
      "watch",
      "all"
    ]
  }
}
